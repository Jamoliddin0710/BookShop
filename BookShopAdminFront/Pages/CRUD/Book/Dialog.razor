@using BookShopAdminFront.Models.DTO.Author;
@using BookShopAdminFront.Models.DTO.Book;
@using BookShopAdminFront.Models.DTO.Genre;
@using Entities.DTO.Publisher;

<MudDialog Style="width:400px; height:300px">
    <DialogContent>
        <MudTextField T="string" @bind-Value="updateBook.Title" Label="Title"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private UpdateBookDTO updateBook = new();
    
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(updateBook));
    }

    void Cancel() => MudDialog.Cancel();
}
